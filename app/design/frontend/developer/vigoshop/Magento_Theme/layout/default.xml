<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
<!--header-->
        <referenceContainer name="header.container">
            <container  htmlClass="full-top-header"  htmlTag="div" name="full-top-header" before="-">
                <container  htmlClass="limit-content"  htmlTag="div" name="custom.limit.content.topmenu" >
                    <block class="Magento\Framework\View\Element\Template" name="top-head-menu" template="Magento_Theme::html/headmenu.phtml">
                    </block><!--insert menu top header -->

                    <!---->
                </container>
            </container>
            <container  htmlClass="full-header-logo"  htmlTag="div" name="full-header-logo" after="full-top-header">
                <container  htmlClass="limit-content"  htmlTag="div" name="custom.limit.content.logo"  after="full-top-header">
                    <block class="Magento\Framework\View\Element\Template" before="-" name="login-regist" template="Magento_Theme::html/login-regist.phtml"/>

                    <container  htmlClass="header-logo-vigo"  htmlTag="div" name="header-logo-vigo" >
                    </container>
                </container>
            </container>
        </referenceContainer>
        <!--<move element="minicart" destination="custom.limit.content.topmenu" after="-"/>-->
        <move element="logo" destination="header-logo-vigo" />
        <referenceContainer name="header.panel.wrapper" remove="true"/>
        <referenceContainer name="header.panel" remove="true"/>
        <referenceBlock name="header" remove="true"/>
        <referenceBlock name="authorization-link" destination="top.links" remove="true"/>
        <referenceBlock name="minicart" remove="true"/>
        <referenceContainer name="compare-link-wrapper" remove="true"/>
        <referenceContainer name="header-wrapper" remove="true"/>

<!--end header-->

<!--format menu-->
        <referenceContainer name="page.top">
            <container class="Magento\Theme\Block\Html\Header" htmlClass="nolimit-menu"  htmlTag="div" name="custom.nolimit.content.menu" >
                <container class="Magento\Theme\Block\Html\Header" htmlClass="limit-content-menu"  htmlTag="div" name="custom.limit.content.menu" >
                </container>
            </container>
        </referenceContainer>
        <move element="catalog.topnav" destination="custom.limit.content.menu" />
        <referenceBlock name="navigation.sections" remove="true"/>
        <move element="top.search" destination="catalog.topnav"  after="-"/>

        <move element="breadcrumbs" destination="main.content"  before="-"/>
<!--end menu-->
