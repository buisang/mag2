<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

        <referenceContainer name="page.wrapper">
            <container name="slider-content" htmlClass="slider-content" htmlTag="div" after="page.top">
                <block class="Magento\Cms\Block\Block" name="home-slide-vip">
                    <arguments>
                        <argument name="block_id" xsi:type="string">home-slide-vip</argument>
                    </arguments>
                </block>
            </container>
            <container name="end-content" htmlClass="end-content" htmlTag="div" before="footer-container">
                <block class="Magento\Framework\View\Element\Template" name="end-content-block" template="Magento_Theme::html/end-content.phtml"/>
            </container>

        </referenceContainer>

    </body>
</page>
